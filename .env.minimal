# ============================================================================
# Event Stream Starter - Minimal Configuration
# ============================================================================
# This is a minimal working configuration for quick testing and development.
# For production deployment, use .env.example as a template.
#
# To use: cp .env.minimal .env
# ============================================================================

# ----------------------------------------------------------------------------
# Database (PostgreSQL) - Docker Compose Defaults
# ----------------------------------------------------------------------------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_URL=postgresql://app:app@db:5432/app

# ----------------------------------------------------------------------------
# Cache & Queue (Redis)
# ----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ----------------------------------------------------------------------------
# Demo Mode - Bypass External APIs for Local Testing
# ----------------------------------------------------------------------------
DEMO_MODE=1

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# External Services - All Disabled for Minimal Setup
# ----------------------------------------------------------------------------

# X/Twitter Integration - Disabled
X_BACKEND=off
X_BEARER_TOKEN=dummy-token-not-used
X_JOB_COOLDOWN_SEC=300

# Security Scanning - Use Local Rules Only (No GoPlus API)
SECURITY_BACKEND=rules
GOPLUS_API_KEY=dummy-key-not-used
ENABLE_GOPLUS_SCAN=false

# Onchain/DEX Data - Disabled
ONCHAIN_BACKEND=off
DEXSCREENER_API_KEY=dummy-key-not-used

# NLP/Sentiment Analysis - Use Simple Rules (No Heavy Models)
SENTIMENT_BACKEND=rules
EMBEDDING_BACKEND=off
LLM_REFINER_ENABLED=false

# Notifications - Disabled
TELEGRAM_PUSH_ENABLED=false
TELEGRAM_BOT_TOKEN=dummy-token-not-used
TELEGRAM_CHAT_ID=-1001234567890

# BigQuery Export - Disabled
BQ_ENABLED=false
BQ_PROJECT=dummy-project
BQ_DATASET=dummy-dataset

# ----------------------------------------------------------------------------
# Performance Tuning - Conservative Defaults
# ----------------------------------------------------------------------------

# Latency Budgets (ms) - Not critical in demo mode
LATENCY_BUDGET_MS_SENTIMENT=500
LATENCY_BUDGET_MS_EXTRACT=300
LATENCY_BUDGET_MS_EMBED=400

# Rate Limiting - Conservative
X_JOB_COOLDOWN_SEC=300
RSS_JOB_COOLDOWN_SEC=300

# Scoring Thresholds - Accept Everything for Testing
SCORE_THRESHOLD=-999
THETA_LIQ=0
THETA_VOL=0
THETA_SENT=0

# ----------------------------------------------------------------------------
# Worker Configuration
# ----------------------------------------------------------------------------
CELERY_LOG_LEVEL=INFO
WORKER_CONCURRENCY=2
WORKER_MAX_TASKS_PER_CHILD=100

# ----------------------------------------------------------------------------
# Optional: Enable for Advanced Testing
# ----------------------------------------------------------------------------

# Uncomment to enable real X/Twitter ingestion:
# X_BACKEND=apify
# X_BEARER_TOKEN=your-actual-bearer-token-here
# Update configs/x_kol.yaml with real Twitter handles

# Uncomment to enable GoPlus security scans:
# SECURITY_BACKEND=goplus
# GOPLUS_API_KEY=your-actual-api-key-here
# ENABLE_GOPLUS_SCAN=true

# Uncomment to enable DEX data:
# ONCHAIN_BACKEND=dexscreener
# DEXSCREENER_API_KEY=your-actual-api-key-here

# Uncomment to enable Telegram notifications:
# TELEGRAM_PUSH_ENABLED=true
# TELEGRAM_BOT_TOKEN=your-actual-bot-token-here
# TELEGRAM_CHAT_ID=your-actual-chat-id-here

# Uncomment to enable BigQuery export:
# BQ_ENABLED=true
# BQ_PROJECT=your-gcp-project-id
# BQ_DATASET=your-dataset-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ----------------------------------------------------------------------------
# Development Helpers
# ----------------------------------------------------------------------------

# Hot reload for API changes
API_RELOAD=true

# Verbose logging (uncomment for debugging)
# LOG_LEVEL=DEBUG
# CELERY_LOG_LEVEL=DEBUG

# Disable SSL warnings for local development
PYTHONWARNINGS=ignore:Unverified HTTPS request
