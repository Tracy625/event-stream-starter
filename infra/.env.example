POSTGRES_URL=postgresql+psycopg2://app:app@db:5432/app
REDIS_URL=redis://redis:6379/0
X_BEARER_TOKEN=your_x_bearer_token_here
GOPLUS_API_KEY=your_goplus_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DEMO_MODE=1

# Sentiment & Keyphrase Analysis
SENTIMENT_BACKEND=rules            # rules | hf
SENTIMENT_STRICT=0                  # 0: fallback on error, 1: fail fast
HF_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest   # HF model for sentiment
HF_DEVICE=cpu                      # cpu | cuda
KEYPHRASE_BACKEND=rules            # rules | hf

# Latency Budgets (milliseconds)
LATENCY_BUDGET_MS_FILTER=10
LATENCY_BUDGET_MS_REFINE=20
LATENCY_BUDGET_MS_TOTAL=120000     # end-to-end cap (ms)